<div class="container align-right">
  <h1>Add a Restaurant</h1>

  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name, lable: false, placeholder: "Name of Restaurant" %>
      <%= f.input :address, lable: false, placeholder: "Address" %>
      <%= f.input :phone_number, lable: false, placeholder: "Phone Number" %>

      <div class="form-group col-md-6">
      <label for="inputState">Category</label><select id="inputState" class="form-control">
        <option selected>Choose...</option>
        <option>chinese</option>
        <option>italian</option>
        <option>japanese</option>
        <option>french</option>
        <option>belgian</option>
      </select>
      </div>
    </div>


    <div class="form-actions">
      <%= f.button :submit,  class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
